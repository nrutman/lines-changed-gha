{
  "name": "lines-changed-action",
  "version": "2.0.0",
  "description": "GitHub Action to comment on PRs with lines changed summary, ignoring specified file patterns",
  "main": "dist/index.js",
  "scripts": {
    "build": "node build.mjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "format": "prettier --write '**/*.ts'",
    "format:check": "prettier --check '**/*.ts'",
    "lint": "eslint .",
    "check": "pnpm type-check && pnpm lint && pnpm format:check && pnpm test && pnpm build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nrutman/lines-changed-gha.git"
  },
  "keywords": [
    "github",
    "action",
    "pr",
    "diff",
    "lines-changed"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^3.0.0",
    "@actions/github": "^9.0.0",
    "minimatch": "^10.2.1"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "esbuild": "^0.27.3",
    "eslint": "^10.0.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
