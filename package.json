{
  "name": "lines-changed-action",
  "version": "1.0.0",
  "description": "GitHub Action to comment on PRs with lines changed summary, excluding specified file patterns",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/main.ts -o dist --source-map",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "format": "prettier --write '**/*.ts'",
    "format:check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "ci": "pnpm run type-check && pnpm run lint && pnpm run format:check && pnpm run test && pnpm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/lines-changed-action.git"
  },
  "keywords": [
    "github",
    "action",
    "pr",
    "diff",
    "lines-changed"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "minimatch": "^9.0.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
